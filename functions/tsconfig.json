{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["../*"]  // Este cambio es importante para que la ruta se resuelva correctamente desde el directorio de funciones
    },
    "target": "ES2020",
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"]
  }
}